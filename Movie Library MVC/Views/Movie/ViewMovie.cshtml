@model Movie

<h3>@Model.MovieName Information</h3>

<table class="table">
    <tr>
        <th>Movie ID</th>
        <th>Movie Name</th>
        <th>Movie Genre</th>
        <th>Rating</th>
        <th>Rating Scale</th>
        <th>Series or Movie</th>
    </tr>
    <tr>
        <td>@Model.MovieID</td>
        <td>@Model.MovieName</td>
        <td>@Model.GenreName</td>
        <td>@Model.Rating</td>
        <td>@Model.RatingScale</td>
        <td>@Model.SeriesOrMovie</td>
    </tr>
</table>

<div style="display: block">
    <a href="/Movie/UpdateMovie/@Model.MovieID">Update this Movie</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteMovie", "Movie", "Post"))
    {
        <input type="hidden" asp-for="MovieID" value="@Model.MovieID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this Movie" />
    }
</div>