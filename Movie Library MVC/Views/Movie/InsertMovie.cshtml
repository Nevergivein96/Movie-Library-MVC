@model Movie

<h2>Create a New Movie</h2>

@using (Html.BeginForm("InsertMovieToDatabase", "Movie", "Post"))
{
        <input asp-for="MovieID" type="hidden" value="" />

        <label asp-for="MovieName" class="control-label">Movie Name</label>
        <input type="text" name="MovieName" class="form-control" value="" />        

        <div class="form-group">
            <label for="">Select a Genre</label>
            <select class="form-control" name="GenreName" value="">
            @foreach (var movie in Model.Genre)
            {
                        <option value="@movie.GenreName">@movie.GenreID @movie.GenreName</option>
            }
            </select>
        </div>

        <label asp-for="Rating" class="control-label">Rating</label>
        <input type="text" step="0.01" name="rating" class="form-control" />

        <label asp-for="RatingScale" class="control-label">Rating Scale</label>
        <input type="number" step="1" name="RatingScale" class="form-control" />

        <label asp-for="SeriesOrMovie" class="control-label">Series Or Movie</label>
        <input type="text" step="0.01" name="SeriesOrMovie" class="form-control" />

        <input type="submit" value="Create Movie" class="btn btn-primary" />
}